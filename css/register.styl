@import './common/index.styl'
body
	overflow auto
	-webkit-overflow-scrolling: touch
.g-hd
	width 100%
	overflow hidden
	.m-hd {
		width: 100%;
		height: 120px;
		border-box();
		padding: 0 40px;
		text-align: center;
		background: $color;
		overflow: hidden;
		clear: both;
		.title {
			font-size: 50px;
			color: #fff;
			line-height: 120px;
			// padding-left: 80px;
			// background: url('../imgs/text_logo.png') left center no-repeat;
			// background-size: auto 0.6rem;
		}

		.back-icon, .voice-icon, .share-icon {
			extend-click();
			float: left;
			margin-top: 30px;
			display: inline-block;
			height: 60px;
			width: 34px;
			background: url('../imgs/back-icon.png') center center no-repeat;
			background-size: cover;
		}

		.voice-icon {
			margin-left: 55px;
			width: 72px;
			height: 60px;
			background: url('../imgs/voice-icon.gif') center center no-repeat;
			background-size: cover;
		}

		.share-icon {
			float: right;
			width: 73px;
			height: 60px;
			background: url('../imgs/share-icon.png') center center no-repeat;
			background-size: cover;
		}
		.login-up{
			float: right;
			margin-top 34px
			color #ffffff
			border 1px solid #ffffff
			padding 6px 8px
			extend-click()
		}			
	}
.g-bd
	width 100%
	padding 0 40px
	border-box()
	background #ffffff
	overflow hidden
	.submit
		margin-top 200px
		p
			height 120px
			line-height 120px
			margin-bottom: 60px;
			input 
				border 1px solid #cccccc
				width 100%
				height 120px
				line-height 120px
				font-size 50px
				border-box()
				padding-left 40px
		.verification-code
			display flex
			input 
				flex 1
			.send-code
				display inline-block
				width 350px
				text-align center
				margin-left 40px
				border none 
				background #eeeeee
				font-size 42px
				&:active
					background #cccccc
	.register-btn
		margin-top 100px
		width 100%
		height 120px
		border none 
		background #fb8437
		color #ffffff
		font-size 50px
		outline none
	.agreement-wrap	
		display flex
		align-items center
		margin-top 80px
		text-align left
		background #ffffff
		.yesOrNo
			display inline-block
			width 60px
			height 60px
			margin-right 8px
			background url('../imgs/agress-selected-icon.png') center center no-repeat
			background-size cover
		.agressment-link
			margin-left 16px		
			color #fb8437
.g-ft
	width 100%
	height 150px
	background #4499e1
	color #fff
	text-align center
	overflow hidden
	.version
		margin-top 20px
		font-size 36px
		a
			color #fff
	.copy
		margin-top 20px
		font-size 36px
