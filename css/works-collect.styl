@import './common/index.styl'
body
	overflow auto
	-webkit-overflow-scrolling: touch
.g-hd
	width 100%
	overflow hidden
	.m-hd {
		width: 100%;
		height: 120px;
		line-height: 120px;
		border-box();
		padding: 0 40px;
		text-align: center;
		background: $color;
		overflow: hidden;
		clear: both;

		.title {
			font-size: 50px;
			color: #fff;
			// padding-left: 80px;
			// background: url('../imgs/text_logo.png') left center no-repeat;
			// background-size: auto 0.6rem;
		}

		.back-icon, .voice-icon, .share-icon {
			extend-click();
			float: left;
			margin-top: 30px;
			display: inline-block;
			height: 60px;
			width: 34px;
			background: url('../imgs/back-icon.png') center center no-repeat;
			background-size: cover;
		}

		.voice-icon {
			margin-left: 55px;
			width: 72px;
			height: 60px;
			background: url('../imgs/voice-icon.gif') center center no-repeat;
			background-size: cover;
		}

		.share-icon {
			float: right;
			width: 73px;
			height: 60px;
			background: url('../imgs/share-icon.png') center center no-repeat;
			background-size: cover;
		}
	}
.g-tab-wrap {
	width: 100%;
	height: 160px;
	line-height: 160px;
	display: flex;
	justify-items: center;
	align-items: center;
	border-1px(#ccc);
	background: #fff;

	.tab {
		flex: 1;
		text-align: center;
		font-size: 60px;

		&.z-crt {
			color: #fb8437;
			border-bottom: 5px solid #fb8437;
		}
	}
}

.g-tab-content {
	width: 100%;
	padding: 0 40px;
	border-box();
	background: #fff;

	.voice-list {
		width: 100%;
		border-box();

		.list {
			width: 100%;
			display: flex;
			padding: 60px 0;
			border-box();
			border-1px(#ccc);

			.cover {
				flex-basis: 2.68rem;

				.img {
					display: block;
					width: 230px;
					height: 230px;
				}
			}

			.text {
				flex: 1;

				.title {
					font-size: 40px;
					color: #333;
					line-height: 1.5;
				}

				.time {
					display: inline-block;
					margin-top: 60px;
					padding-left: 45px;
					width: 33px;
					height: 31px;
					line-height: 31px;
					background: url('../imgs/time-icon.png') left center no-repeat;
					background-size: contain;
					color: #999;
					font-size: 30px;
				}
			}

			.download {
				align-self: center;
				display: inline-block;
				flex-basis: 0.8rem;
				height: 80px;
				background: url('../imgs/play-icon.png') center center no-repeat;
				background-size: contain;
				extend-click();
			}
		}
	}

	.album-list {
		display: none;
		width: 100%;
		border-box();

		.list {
			width: 100%;
			display: flex;
			padding: 60px 0;
			border-box();
			border-1px(#ccc);

			.cover {
				flex-basis: 2.68rem;

				.img {
					display: block;
					width: 230px;
					height: 230px;
				}
			}

			.text {
				flex: 1;

				.title {
					font-size: 50px;
					color: #333;
				}

				.desc {
					max-width: 710px;
					no-wrap();
					margin-top: 30px;
					font-size: 40px;
					color: #999;
				}

				.time {
					display: inline-block;
					margin-top: 60px;
					padding-left: 45px;
					height: 31px;
					line-height: 31px;
					background: url('../imgs/list-icon.png') left center no-repeat;
					background-size: 0.27rem auto;
					color: #999;
					font-size: 30px;
				}
			}
		}
	}
}

.g-ft
	width 100%
	height 150px
	background #4499e1
	color #fff
	text-align center
	overflow hidden
	.version
		margin-top 20px
		font-size 36px
		a
			color #fff
	.copy
		margin-top 20px
		font-size 36px
