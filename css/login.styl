@import './common/index.styl'
body
	overflow auto
	-webkit-overflow-scrolling: touch
.g-hd
	width 100%
	overflow hidden
	.m-hd {
		width: 100%;
		height: 120px;
		border-box();
		padding: 0 40px;
		text-align: center;
		background: $color;
		overflow: hidden;
		clear: both;
		.title {
			font-size: 50px;
			color: #fff;
			line-height: 120px;
			// padding-left: 80px;
			// background: url('../imgs/text_logo.png') left center no-repeat;
			// background-size: auto 0.6rem;
		}

		.back-icon, .voice-icon, .share-icon {
			extend-click();
			float: left;
			margin-top: 30px;
			display: inline-block;
			height: 60px;
			width: 34px;
			background: url('../imgs/back-icon.png') center center no-repeat;
			background-size: cover;
		}

		.voice-icon {
			margin-left: 55px;
			width: 72px;
			height: 60px;
			background: url('../imgs/voice-icon.gif') center center no-repeat;
			background-size: cover;
		}

		.share-icon {
			float: right;
			width: 73px;
			height: 60px;
			background: url('../imgs/share-icon.png') center center no-repeat;
			background-size: cover;
		}
		.login-up{
			float: right;
			margin-top 34px
			color #ffffff
			border 1px solid #ffffff
			padding 6px 8px
			extend-click()
		}			
	}
.g-bd
	width 100%
	padding 0 40px
	border-box()
	background #ffffff
	overflow hidden
	.submit
		margin-top 200px
		input 
			border 1px solid #cccccc
			width 100%
			height 120px
			line-height 120px
			margin-bottom 60px
			font-size 50px
			border-box()
			padding-left 120px
			&#account
				background url('../imgs/account.png') left 4px center no-repeat
				background-size auto 0.8rem
			&#password
				background url('../imgs/password.png') left 4px center no-repeat
				background-size auto 0.8rem
	.submit-btn
		margin-top 100px
		width 100%
		height 100px
		border none 
		background #0081dc
		color #ffffff
		font-size 50px
		outline none
	.forget-password	
		margin-top 80px
		text-align right
		background #ffffff
.g-ft
	width 100%
	height 150px
	background #4499e1
	color #fff
	text-align center
	overflow hidden
	.version
		margin-top 20px
		font-size 36px
		a
			color #fff
	.copy
		margin-top 20px
		font-size 36px
