@import './common/index.styl'
body
	overflow auto
	-webkit-overflow-scrolling: touch
.g-hd
	width 100%
	overflow hidden
	.m-hd {
		width: 100%;
		height: 120px;
		line-height: 120px;
		border-box();
		padding: 0 40px;
		text-align: center;
		background: $color;
		overflow: hidden;
		clear: both;

		.title {
			font-size: 50px;
			color: #fff;
			// padding-left: 80px;
			// background: url('../imgs/text_logo.png') left center no-repeat;
			// background-size: auto 0.6rem;
		}

		.back-icon, .voice-icon, .share-icon {
			extend-click();
			float: left;
			margin-top: 30px;
			display: inline-block;
			height: 60px;
			width: 34px;
			background: url('../imgs/back-icon.png') center center no-repeat;
			background-size: cover;
		}

		.voice-icon {
			margin-left: 55px;
			width: 72px;
			height: 60px;
			background: url('../imgs/voice-icon.gif') center center no-repeat;
			background-size: cover;
		}

		.share-icon {
			float: right;
			width: 73px;
			height: 60px;
			background: url('../imgs/share-icon.png') center center no-repeat;
			background-size: cover;
		}
	}
.g-bd
	width 100%
	padding 0 40px
	border-box()
	background #ffffff
	.list-wrap
		.list
			width 100%
			padding 40px 0
			// height 150px
			// border-1px(#ccc)
			font-size 40px
			border-box()
			.date
				text-align center
				font-size 36px
				color #999
			.content
				display flex
				margin-top 30px
				.avatar
					display block
					width 120px
					height 120px
					border-radius 50%
				.text
					flex 1
					margin-left 40px
					border 1px solid #eeeeee
					padding 40px
					border-radius 40px
					line-height 1.8
.g-ft
	width 100%
	height 150px
	background #4499e1
	color #fff
	text-align center
	overflow hidden
	.version
		margin-top 20px
		font-size 36px
		a
			color #fff
	.copy
		margin-top 20px
		font-size 36px
