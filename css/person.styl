@import './common/index.styl';

body {
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.g-hd {
    width: 100%;
    overflow: hidden;

    .m-hd {
        width: 100%;
        height: 120px;
        line-height: 120px;
        border-box();
        padding: 0 40px;
        text-align: center;
        background: $color;
        overflow: hidden;
        clear: both;

        .title {
            font-size: 50px;
            color: #fff;
            padding-left: 80px;
            background: url('../imgs/text_logo.png') left center no-repeat;
            background-size: auto 0.6rem;
        }

        .back-icon, .voice-icon, .share-icon {
            extend-click();
            float: left;
            margin-top: 30px;
            display: inline-block;
            height: 60px;
            width: 34px;
            background: url('../imgs/back-icon.png') center center no-repeat;
            background-size: cover;
        }

        .voice-icon {
            margin-left: 55px;
            width: 72px;
            height: 60px;
            background: url('../imgs/voice-icon.gif') center center no-repeat;
            background-size: cover;
        }

        .share-icon {
            float: right;
            width: 73px;
            height: 60px;
            background: url('../imgs/share-icon.png') center center no-repeat;
            background-size: cover;
        }
    }
}

.g-anchor-info {
    width: 100%;
    border-box();
    padding: 60px 40px;
    padding-bottom: 0;
    background: #fff;

    .info-wrap {
        display: flex;

        .avatar-wrap {
            width: 300px;
            height: 300px;
            overflow: hidden;

            .img {
                display: block;
                width: 100%;
                height: 100%;
            }
        }

        .text-wrap {
            margin-left: 60px;

            .title {
                font-size: 50px;
                color: #333;
            }

            .anchor-wrap, .type-wrap {
                margin-top: 40px;
                font-size: 40px;
                color: #999;

                span {
                    color: $color;
                }
            }

            .detail-wrap {
                max-width: 570px;
                overflow: hidden;
                white-space: nowrap;
                margin-top: 40px;
                font-size: 40px;
                color: #999;
            }
        }
    }

    .interact-wrap {
        margin-top: 30px;
        width: 100%;
        height: 160px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-1px(#ccc);

        .item {
            flex: 1;
            text-align: center;
            color: #999;

            &:nth-child(1) {
                .icon {
                    background: url('../imgs/praise-black-icon.png') center center no-repeat;
                    background-size: contain;
                }
            }

            &:nth-child(2) {
                .icon {
                    background: url('../imgs/share-black-icon.png') center center no-repeat;
                    background-size: contain;
                }
            }

            &:nth-child(3) {
                .icon {
                    background: url('../imgs/download-all-icon.png') center center no-repeat;
                    background-size: contain;
                }
            }

            &:nth-child(4) {
                .icon {
                    background: url('../imgs/collect-icon.png') center center no-repeat;
                    background-size: contain;
                }
            }

            .icon {
                display: inline-block;
                width: 70px;
                height: 50px;
            }

            .text {
                margin-top: 20px;
                display: block;
            }
        }
    }

    .tags-wrap {
        width: 100%;
        border-box();
        padding: 50px 0;
        display: flex;

        .tag {
            margin: 0 20px;
            padding: 10px 20px;
            background: #fdebd0;
        }
    }
}

.g-tab-wrap {
    width: 100%;
    margin-top: 20px;
    height: 160px;
    line-height: 160px;
    display: flex;
    justify-items: center;
    align-items: center;
    border-1px(#ccc);
    background: #fff;

    .tab {
        flex: 1;
        text-align: center;
        font-size: 60px;

        &.z-crt {
            color: #fb8437;
            border-bottom: 5px solid #fb8437;
        }
    }
}

.g-tab-content {
    width: 100%;
    padding: 0 40px;
    border-box();
    background: #fff;

    .voice-list {
        width: 100%;
        border-box();

        .list {
            width: 100%;
            display: flex;
            padding: 60px 0;
            border-box();
            border-1px(#ccc);

            &.list-hd {
                padding: 50px 0;

                .hd {
                    display: inline-block;
                    height: 40px;
                    line-height: 40px;
                    font-size: 40px;
                    color: #666;
                    padding-left: 70px;
                    background: url('../imgs/list-icon.png') left center no-repeat;
                    background-size: contain;
                }
            }

            .cover {
                flex-basis: 2.68rem;

                .img {
                    display: block;
                    width: 230px;
                    height: 230px;
                }
            }

            .text {
                flex: 1;

                .title {
                    font-size: 40px;
                    color: #333;
                    line-height: 1.5;
                }

                .time {
                    display: inline-block;
                    margin-top: 60px;
                    padding-left: 45px;
                    width: 33px;
                    height: 31px;
                    line-height: 31px;
                    background: url('../imgs/time-icon.png') left center no-repeat;
                    background-size: contain;
                    color: #999;
                    font-size: 30px;
                }
            }

            .download {
                align-self: center;
                display: inline-block;
                flex-basis: 0.8rem;
                height: 80px;
                background: url('../imgs/play-icon.png') center center no-repeat;
                background-size: contain;
                extend-click();
            }
        }
    }

    .album-list {
        display: none;
        width: 100%;
        border-box();

        .list {
            position: relative;
            width: 100%;
            border-box();
            display: flex;
            padding: 60px 0;
            border-1px(#ccc);

            .avatar {
                display: block;
                width: 230px;
                height: 230px;
            }

            .text-wrap {
                flex: 1;
                margin-left: 60px;
                overflow: hidden;

                .title {
                    margin-top: 18px;
                    font-size: 50px;
                    color: #333;
                }

                .desc {
                    width: 100%;
                    border-box();
                    margin-top: 36px;
                    font-size: 40px;
                    color: #999;
                    no-wrap();
                }

                .tag-wrap {
                    margin-top: 40px;

                    .tag {
                        display: inline-block;
                        margin-left: 10px;
                        height: 36px;
                        line-height: 36px;
                        padding: 4px 10px;
                        font-size: 28px;
                        border: 1px solid #fb8437;
                        color: #fb8437;
                    }
                }
            }

            .list-count {
                position: absolute;
                right: 0;
                bottom: 60px;
                color: #999;
                font-size: 30px;
                padding-left: 50px;
                background: url('../imgs/list-icon.png') left center no-repeat;
                background-size: 0.27rem auto;
            }
        }
    }
}

.g-ft {
    width: 100%;
    height: 150px;
    background: #4499e1;
    color: #fff;
    text-align: center;
    overflow: hidden;

    .version {
        margin-top: 20px;
        font-size: 36px;

        a {
            color: #fff;
        }
    }

    .copy {
        margin-top: 20px;
        font-size: 36px;
    }
}
